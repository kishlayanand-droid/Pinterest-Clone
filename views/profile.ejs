<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <form id="uploadform" hidden action="/uploadProfilePicture" method="post" enctype="multipart/form-data">
      <input type="file" name="image">
    </form>
    <div class="containerpers">
        <div class="cardpers">
          <div class="profile-picture">
            <i id="uploadicon" class="fa-solid fa-pen-to-square"></i>
            <img src="/images/uploads/<%= user.profileImage%>" alt="Profile Picture">
          </div>
          <h2 class="name"><%= user.fullname %></h2>
          <h3 class="username">@<%= user.username %></h3>
          <p class="tagline">Lorem ipsum dolor, sit amet consectetur adipisicing.</p>
          <p class="description">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Et?</p>
          <a href="/logout" class="button">Logout</a>

          <div class="uploadphoto">
            <form action="/upload" method="post" enctype="multipart/form-data">
              <input type="file" name="file">
              <input type="text" name="imagecaption" placeholder="Caption">
              <input type="submit">
            </form>
          </div>

        </div>
    </div>

    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post){ %>
          <div class="card" style="width: 18rem;">
            <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= post.imageText %></h5>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <script>
      document.querySelector("#uploadicon").addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
      })
      document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
      })

    </script>
    <script src="https://kit.fontawesome.com/c1b8ceae8b.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>